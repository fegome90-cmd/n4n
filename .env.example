# Neovim for Nurses (N4N) - Environment Variables Example
# Copy this file to .env and fill with your actual values
# NEVER commit .env to git

# ============================================
# NEOVIM CONFIGURATION
# ============================================
N4N_CONFIG_PATH=~/.config/nvim
N4N_TEMPLATES_PATH=~/.config/nvim/templates
N4N_DATA_PATH=~/.local/share/nvim

# ============================================
# CLINICAL TEMPLATES
# ============================================
N4N_TEMPLATE_FORMAT=markdown
N4N_AUTO_SAVE=true
N4N_BACKUP_ENABLED=true

# ============================================
# SECURITY SETTINGS
# ============================================
N4N_HIPAA_MODE=true
N4N_ENCRYPTION_KEY=your_encryption_key_here_min_32_characters
N4N_SESSION_TIMEOUT=30m

# ============================================
# MEDICAL ABBREVIATIONS
# ============================================
N4N_CUSTOM_ABBREVIATIONS=~/.config/nvim/abbreviations.json
N4N_SPECIALTY_MODE=general
# Options: general, icu, er, pediatrics, oncology, etc.

# ============================================
# INTEGRATION SETTINGS
# ============================================
# N4N_EMR_INTEGRATION=epic
# N4N_EMR_ENDPOINT=https://your-emr-system.com/api
# N4N_EMR_API_KEY=your_emr_api_key

# ============================================
# DEVELOPMENT
# ============================================
N4N_DEBUG_MODE=false
N4N_LOG_LEVEL=info
N4N_VERBOSE_MODE=false

# ============================================
# BACKUP & SYNC
# ============================================
N4N_BACKUP_PATH=~/.local/share/nvim/backup
N4N_SYNC_ENABLED=false
# N4N_SYNC_ENDPOINT=https://your-backup-server.com/api
# FEATURE_BETA_ACCESS=false
